{
  "name": "Rapid Note",
  "description": "By using this extension you can save your notes that you took from on internet.",
  "background": { "scripts": ["background/index.js"] },
  "content_scripts": [
    {
      "js": ["content/index.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "browser_action": { 
    "default_popup": "pages/popup/index.html",
    "default_icon": {
      "16": "/images/demo.png",
      "32": "/images/demo.png",
      "48": "/images/demo.png",
      "128": "/images/demo.png"
    }
  },
  "icons": {
    "16": "/images/demo.png",
    "32": "/images/demo.png",
    "48": "/images/demo.png",
    "128": "/images/demo.png"
  }
}
